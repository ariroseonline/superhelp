

	<div class="row">
		<div class="col-sm-2 task-list">

			<h4 class="page-header">
				<span {{bind-attr class=":glyphicon oneTimeExpanded:glyphicon-minus:glyphicon-plus"}}{{action "toggleTaskList" "oneTimeExpanded"}}></span>
				One-Time Tasks</h4>
			<div {{bind-attr class=":one-tasks oneTimeExpanded::hide"}}>
				{{#each task in oneTasks}}
					{{#draggable-item content=task.id}}
						<div class="panel panel-default">
						  <div class="panel-body">
								<p>title: {{task.title}}</p>   
								<p>body: {{task.body}}</p>   
							</div>
						</div> 
					{{/draggable-item}}
				{{/each}}
			</div>
			<h4 class="page-header">
				<span {{bind-attr class=":glyphicon recurringExpanded:glyphicon-minus:glyphicon-plus"}} {{action "toggleTaskList" "recurringExpanded"}}></span>
				Weekly Tasks</h4>
			<div {{bind-attr class=":recurring-tasks recurringExpanded::hide"}}>
				{{#each task in recurringTasks}}
					{{#draggable-item content=task.id}}
						<div class="panel panel-default">
						  <div class="panel-body">
								<p>title: {{task.title}}</p>   
								<p>body: {{task.body}}</p>   
							</div>
						</div>
					{{/draggable-item}}
				{{/each}}
			</div>
			<h2>New Task</h2>
			<ul class="post-publish">
			  <li>
			    {{input value=newTask.title placeholder="Title"}}
			  </li>
			  <li>
			    {{textarea value=newTask.body placeholder="Body"}}
			  </li>			  
			  <li>
			    {{input value=newTask.day placeholder="Day"}}
			  </li>
			  <li>
			  	{{input type="checkbox" name="isRecurring" checked=newTask.isRecurring}}
			  </li>
			  <li>
			    <button {{action "addTask"}}>Add Task</button>
			  </li>
			</ul>
		</div>

		<div class="col-sm-12 schedule">
			{{outlet}}
		</div>
	</div>

